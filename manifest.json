{
  "manifest_version": 3,
  "name": "Temporary Mail Generator by Marij Maryam",
  "version": "1.0.0",
  "description": "Generate disposable email addresses instantly. Protect your privacy with temporary emails from Mail.tm - no spam, no tracking, completely free.",
  "author": "Marij Maryam",
  
  "permissions": [
    "clipboardWrite",
    "alarms",
    "storage"
  ],
  
  "host_permissions": [
    "https://api.mail.tm/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Temporary Mail Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "minimum_chrome_version": "88"
}